/* pages/gongxun/gongxun.wxss */

.dropdown-container {
  left: 2%;
  font-size: 16px;
  box-sizing:border-box;
  position: relative;
  height: 10%;
  margin-bottom: 5rpx;
  display: flex;
  justify-content: center;
}

.dropdown-button {
  font-size: 16px;
  box-sizing:border-box;
  /* width: 100%;
  height: 100%; */
  padding: 3px;
  background-color: #ffffff;
  border: 1px solid #ddd;
  border-radius: 8px;
  text-align: center;
  color: #333;
}

.dropdown-menu {
  position: absolute;
  left: 50%;
  top: 100%;
  width: 50%;
  transform: translateX(-50%);
  background-color: #ffffff;
  border: 1px solid #ddd;
  border-radius: 4px;
  margin-top: 5px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  z-index: 1000;
}

.dropdown-item {
  padding: 5px;
  font-size: 16px;
  color: #333;
  cursor: pointer;
}

.dropdown-item:hover {
  background-color: #f1f1f1;
}

.schedule-container {
  padding: 1%;
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
}

.schedule-header {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  margin: 20px 0;
  color: #333;
  position: relative;
}

.schedule-table {
  width: 100%;
  border-collapse: collapse;
  background-color: #fff;
  border-radius: 4px;
  overflow: hidden;
}

.row {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-shrink: 0;
}

.cell {
  width: 15%;
  flex: 1;
  border: 1px solid #ddd;
  padding: 10px 0;
  text-align: center;
  font-size: 12px;
  color: #333;
}

.time-cell {
  width: 10%;
  width: 100px;
  background-color: #f9f9f9;
  font-weight: bold;
}

.header-row .cell {
  background-color: #f0f0f0;
  font-weight: bold;
  color: #333;
}

.row:nth-child(even) .cell {
  background-color: #f9f9f9;
}

.row .cell:hover {
  background-color: #e9e9e9;
}

.input-container {
  position: fixed;
  top: 35%;    
  left: 50%;
  transform: translateX(-50%);
  padding: 5%;
  border: 2px solid #333;
  border-radius: 5px;
  background-color: #f1f1f1;
  display: flex;
  flex-direction: column;
  align-items: center;
}


input {
  padding: 10px;
  font-size: 16px;
  margin-bottom: 10px;
  width: 90%;
  border: 2px solid #333;
  border-radius: 5px;
}

.reverse-btn {
  border: 2px solid #333;
  border-radius: 5px;
}

.export-btn {
  font-size: 12px;
  position:absolute;
  top: 50%;
  right: 1%;
  transform: translateY(-50%);
  color: #fff;
  background-color: #00c553;
  padding: 5px;
  border-radius: 5px;
}